<configuration scan="true">

  <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{ISO8601} | %-30t | %-5level %-30c{30} | %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="chat" level="debug"/>

  <root level="info">
    <appender-ref ref="stdout"/>
  </root>

</configuration>
